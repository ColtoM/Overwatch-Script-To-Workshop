    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Script",
            "type":"clr",
            "request": "launch",
            "preLaunchTask": "Debug build",
            "program": "${workspaceFolder}/bin/Debug/Deltinteger.exe",
            "args":["${file}"],
            "console": "externalTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug Script Verbose",
            "type":"clr",
            "request": "launch",
            "preLaunchTask": "Debug build",
            "program": "${workspaceFolder}/bin/Debug/Deltinteger.exe",
            "args":["${file}", "-verbose"],
            "console": "externalTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Language Server Debug",
            "type":"clr",
            "request": "launch",
            "preLaunchTask": "Debug build",
            "program": "${workspaceFolder}/bin/Debug/Deltinteger.exe",
            "args":["-langserver", "-port 9145 9146"],
            "console": "externalTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Generate Economic Alphabet",
            "type":"clr",
            "request": "launch",
            "preLaunchTask": "Debug build",
            "program": "${workspaceFolder}/bin/Debug/Deltinteger.exe",
            "args":["-generatealphabet"],
            "console": "externalTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Release",
            "type":"clr",
            "request": "launch",
            "preLaunchTask": "Release build",
            "program": "${workspaceFolder}/bin/Release/Deltinteger.exe",
            "args":[],
            "console": "externalTerminal",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}