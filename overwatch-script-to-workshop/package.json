{
    "name": "overwatch-script-to-workshop",
    "displayName": "Overwatch Script To Workshop",
    "description": "Autocomplete and syntax highlighting for Overwatch Script To Workshop",
    "version": "0.1.2",
    "publisher": "Deltin",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:plaintext",
        "onLanguage:ostw"
    ],
    "main": "./client/out/extensions.js",
    "contributes": {
        "languages": [
            {
                "id": "ostw",
                "aliases": [
                    "Overwatch Script To Workshop",
                    "ostw"
                ],
                "extensions": [
                    ".del",
                    ".ostw",
                    ".workshop"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ostw",
                "scopeName": "source.del",
                "path": "./syntaxes/ostw.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "ostw",
            "properties": {
                "ostw.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "ostw.port1": {
                    "scope": "resource",
                    "type": "number",
                    "default": 9145,
                    "description": "The first port the language server application is using."
                },
                "ostw.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "commands": [
            {
                "command": "ostw.webviewOutput",
                "title": "Create webview panel for workshop code output.",
                "category": "Overwatch Script To Workshop"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.0",
        "@types/node": "^8.10.52",
        "tslint": "^5.19.0",
        "typescript": "^3.5.3"
    },
    "dependencies": {
        "async": "^3.1.0",
        "request": "^2.88.0"
    }
}
